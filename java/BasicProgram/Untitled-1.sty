import java.util.Scanner;

class Employee {
    Scanner sc = new Scanner(System.in);
    int empNo = 1, daysPresent;
    float perDayPay, monthlySalary;
    String empName, department;

    // Onboarding a new employee
    void onBoardEmp(String empName, String dept) {
        this.empName = empName.trim();
        this.department = dept.trim();
        System.out.println("Congratulations! You are welcome onboard.");
    }

    // Determine per day pay based on department
    float process() {
        if (department.equalsIgnoreCase("IT")) {
            perDayPay = 200;
        } else if (department.equalsIgnoreCase("Sales")) {
            perDayPay = 100;
        } else if (department.equalsIgnoreCase("BA")) {
            perDayPay = 150;
        } else if (department.equalsIgnoreCase("Business")) {
            perDayPay = 90;
        } else {
            perDayPay = 0; // Invalid department
        }
        return perDayPay;
    }

    // Calculate monthly salary
    float calculate() {
        // Determine per day pay
        process();

        System.out.println("Enter the number of days you worked: ");
        daysPresent = sc.nextInt();

        // Calculate monthly salary
        monthlySalary = perDayPay * daysPresent;
        return monthlySalary;
    }

    // Display employee details
    void display() {
        System.out.println("\nEmployee No.: " + empNo);
        System.out.println("Employee Name: " + empName);
        System.out.println("Employee Department: " + department);
        System.out.println("Per Day Pay: " + perDayPay);
        System.out.println("Days Worked: " + daysPresent);
        System.out.println("Employee Monthly Salary: " + monthlySalary);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Employee employee = new Employee();

        // Onboard the employee
        System.out.print("Enter Employee Name: ");
        String name = sc.nextLine();
        System.out.print("Enter Department: ");
        String dept = sc.nextLine();
        employee.onBoardEmp(name, dept);

        // Process salary calculation and display details
        employee.calculate();
        employee.display();

        // Close the Scanner
        sc.close();
        employee.sc.close();
    }
}
